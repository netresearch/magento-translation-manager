<?php
/**
 * @var \Zend\View\Renderer\PhpRenderer        $this
 * @var \Application\ResultSet\SupportedLocale $supportedLocales
 * @var \Application\Model\SupportedLocale     $locale
 * @var \Import\Form\ImportForm                $form
 */

$title = $this->translate('Import');
$this->headTitle($title);

$form = $this->form;
$form->setAttribute('action', $this->url('import', [ 'action' => 'index' ]));
$form->prepare();
?>

<h1><?= $this->escapeHtml($title); ?></h1>
<div class="card mt-4">
    <div class="card-header">
        <?= $this->translate('Import magento language CSV file(s)') ?>
    </div>
    <div class="card-body">
        <?= $this->form()->openTag($form); ?>
            <div class="form-group">
                <?php $files = $form->get('files'); ?>
                <?= $this->formLabel($files); ?>
                <?= $this->formElement($files); ?>
                <?= $this->formElementErrors($files); ?>
            </div>
            <div class="form-group">
                <?php $locale = $form->get('locale'); ?>
                <?= $this->formLabel($locale); ?>
                <?= $this->formElement($locale); ?>
                <?= $this->formElementErrors($locale); ?>
            </div>
            <div class="form-group">
                <?= $this->formElement($form->get('submit')); ?>
            </div>
        <?= $this->form()->closeTag(); ?>
    </div>
</div>

