                    </td>
                    <td class="text-right">
                        <a class="btn btn-info btn-sm" href="<?= $this->url('locale', [ 'action'=>'edit', 'id' => $locale->getId() ]);?>"><?= $this->translate('Edit') ?></a>
                        <a class="btn btn-danger btn-sm" href="<?= $this->url('locale', [ 'action'=>'delete', 'id' => $locale->getId() ]);?>"><?= $this->translate('Delete') ?></a>
                    </td>
                </tr>
            <?php endforeach; ?>
        </table>
    </div>
</div>
